<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="48dp"
    android:paddingBottom="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2dp">

    <com.eevoskos.robotoviews.widget.RobotoTextView
        android:id="@+id/news_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="News title"
        android:textColor="@color/Black"
        android:textSize="15sp"
        roboto:typeface="regular" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_post_title">

        <com.eevoskos.robotoviews.widget.RobotoTextView
            android:id="@+id/news_post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/news_post_date"
            android:layout_toStartOf="@+id/news_post_date"
            android:paddingRight="10dp"
            android:ellipsize="end"
            android:text="News author"
            android:textColor="@color/Gray"

            android:textSize="12sp"
            roboto:typeface="regular" />


        <com.eevoskos.robotoviews.widget.RobotoTextView
            android:id="@+id/news_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="News sender"
            android:textColor="@color/Gray"
            android:textSize="12sp"
            roboto:typeface="regular" />

    </RelativeLayout>

</RelativeLayout>