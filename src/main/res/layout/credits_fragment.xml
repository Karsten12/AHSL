<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSteelBlue">


    <TextView
        android:id="@+id/splash2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/Meet_developers"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_karsten"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@id/splash2"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.eevoskos.robotoviews.widget.RobotoTextView
                android:id="@+id/karsten_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="Lead developer"
                android:textColor="@color/White"
                android:textSize="20sp"
                roboto:typeface="regular" />

            <ImageView
                android:id="@+id/karsten_card"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/karsten_title"
                android:src="@drawable/ic_karsten2" />

            <TextView
                android:id="@+id/card_main_inner_simple_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/karsten_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/karsten_card"
                android:lines="4"
                android:maxLines="4"
                android:text="@string/karsten_info"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_justin"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/card_karsten"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.eevoskos.robotoviews.widget.RobotoTextView
                android:id="@+id/justin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="Lead graphics"
                android:textColor="@color/White"
                android:textSize="20sp"
                roboto:typeface="regular" />

            <ImageView
                android:id="@+id/justin_card"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_below="@+id/justin_title"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_justin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/justin_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/justin_card"
                android:lines="4"
                android:maxLines="4"
                android:text="@string/justin_info"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/Leave_Button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Done"
        flatui:fl_theme="@array/blood" />

</RelativeLayout>