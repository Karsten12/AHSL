<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.eevoskos.robotoviews.widget.RobotoTextView
        android:id="@+id/gradedet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/gradedet_pct"
        android:layout_toStartOf="@+id/gradedet_pct"
        android:maxLines="2"
        android:paddingRight="10dp"
        android:text="Assignment"
        android:textColor="@color/Black"
        android:textSize="16sp"
        roboto:typeface="regular" />

    <com.eevoskos.robotoviews.widget.RobotoTextView
        android:id="@+id/gradedet_pct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="100%"
        android:textColor="@color/Black"
        android:textSize="16sp"
        roboto:typeface="regular" />


    <com.eevoskos.robotoviews.widget.RobotoTextView
        android:id="@+id/gradedet_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gradedet_name"
        android:text="Date"
        android:textColor="@color/Gray"
        android:textSize="14sp"
        roboto:typeface="regular" />


    <com.eevoskos.robotoviews.widget.RobotoTextView
        android:id="@+id/gradedet_categ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gradedet_date"
        android:layout_toLeftOf="@+id/gradedet_score"
        android:layout_toRightOf="@+id/gradedet_date"
        android:layout_toStartOf="@+id/gradedet_score"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Category"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/Gray"
        android:textSize="14sp"
        roboto:typeface="regular" />

    <com.eevoskos.robotoviews.widget.RobotoTextView
        android:id="@+id/gradedet_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gradedet_date"
        android:layout_alignParentRight="true"
        android:text="Score"
        android:textColor="@color/Gray"
        android:textSize="14sp"
        roboto:typeface="regular" />

</RelativeLayout>